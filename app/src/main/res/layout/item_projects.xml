<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:paddingStart="12dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardUseCompatPadding="false"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:strokeWidth="0dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ip_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/ip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:textColor="?colorOnSurface"
            style="?attr/textAppearanceTitleMedium"
            app:layout_constraintBottom_toTopOf="@id/ip_pkg_name"
            app:layout_constraintStart_toEndOf="@id/ip_icon"
            app:layout_constraintTop_toTopOf="@id/ip_icon" />
            
        <TextView
            android:id="@+id/ip_pkg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            android:textColor="?colorOnSurface"
            style="?attr/textAppearanceBodyMedium"
            app:layout_constraintBottom_toBottomOf="@id/ip_icon"
            app:layout_constraintStart_toEndOf="@id/ip_icon"
            app:layout_constraintTop_toBottomOf="@id/ip_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

